{
      "$schema": "https://json.schemastore.org/package.json",
      "name": "server",
      "type": "module",
      "main": "dist/index.js",
      "scripts": {
            "prebuild": "rm -rf ./dist",
            "build": "tsc -p ./tsconfig.json",
            "dev": "tsx watch ./src/index.ts",
            "lint": "eslint --fix",
            "build:prod": "rm -rf ./dist-deploy && pnpm --filter server --prod deploy ./dist-deploy"
      },
      "devDependencies": {
            "@repo/eslint": "workspace:*",
            "@repo/tsconfig": "workspace:*"
      },
      "files": [
            "package.json",
            "dist"
      ],
      "dependencies": {
            "@repo/a": "workspace:*",
            "@repo/b": "workspace:*"
      }
}
